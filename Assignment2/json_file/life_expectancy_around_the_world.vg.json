{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Life Expectancy Around the World, 1990-2021",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "yearSelection",
            "value": 1990,
            "bind":{
                "input": "range",
                "min": 1990,
                "max": 2021,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],

    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/LimJunYi02/FIT3179/main/Assignment2/json_file/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
                }
            ],
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
            "encoding": {"tooltip": {"field": "note"}}
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/LimJunYi02/FIT3179/main/Assignment2/json_file/oceans.json",
                "format": {"type": "topojson", "feature": "oceans"}
            },
            "mark": {"type": "geoshape", "fill": "skyblue"}
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/LimJunYi02/FIT3179/main/Assignment2/json_file/ne_110m.json",
                "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/LimJunYi02/FIT3179/main/Assignment2/data/Life%20Expectancy%20at%20Birth.csv"
            },
            "transform": [
                {
                    "fold": ["1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021"],
                    "as": ["year", "life_expectancy"]
                },
                {
                    "lookup": "ISO3",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/LimJunYi02/FIT3179/main/Assignment2/json_file/ne_110m.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.ISO_A3"
                    },
                    "as": "geo"
                },
                {"filter": "datum.year == yearSelection"}
            ],
            "mark": { "type": "geoshape", "stroke": "#cdcdcd"},
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "field": "life_expectancy",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [60,65,70,75,80],
                        "range": ["#ffffcc", "#d9f0a3", "#addd8e", "#78c679", "#31a354", "#006837"]
                      }
                }
            }
        }
    ]
}