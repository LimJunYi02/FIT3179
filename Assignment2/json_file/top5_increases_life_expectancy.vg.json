{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "Top 5 Countries with the Highest Increases in Life Expectancy, 1990-2021", "fontSize": 16, "fontWeight":"bold"},
    "width": 400,
    "height": 400,

    "data": {"url": "https://raw.githubusercontent.com/LimJunYi02/FIT3179/main/Assignment2/data/Life%20Expectancy%20at%20Birth.csv"},

    "transform": [
        {
            "calculate": "datum['2021'] - datum['1990']",
            "as": "life_expectancy_increased"
        },
        {
            "window": [
            {
                "op": "rank",
                "as": "rank"
            }
            ],
            "sort": [{"field": "life_expectancy_increased", "order": "descending"}]
        },
        {
            "filter": "datum.rank <= 5"
        },
        {
            "fold": ["1990", "2021"],
            "as": ["year", "life_expectancy"]
        }
    ],

    "encoding": {
        "x": {
            "field": "life_expectancy",
            "type": "quantitative",
            "scale": {"domain": [0, 80]},
            "axis": {
                "title": "Life Expectancy",
                "titleFontWeight":"bold",
                "titleFontSize": 13,
                "labelFontSize": 11
            }
          },
          "y": {
            "field": "Country",
            "type": "nominal",
            "axis": {
              "offset": 10,
              "ticks": false,
              "domain": false,
              "title": "Country",
              "titleFontWeight":"bold",
              "titleFontSize": 13,
              "labelFontSize": 11
            },
            "sort": {"field": "rank", "order": "ascending"}
          }
    },
    "layer": [
        {
          "mark": "line",
          "encoding": {
            "detail": {
              "field": "Country",
              "type": "nominal"
            },
            "color": {"value": "#3182bd"}
          }
        },
        {
            "mark": {
                "type": "point",
                "filled": true,
                "size": 100
            },
            "encoding": {
                "color": {
                    "field": "year",
                    "type": "ordinal",
                    "scale": {"range": ["#6baed6", "#08519c"]},
                    "legend": {
                        "title": "Year",
                        "titleFontSize": 12,
                        "labelFontSize": 11
                    }
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal", "title": "Country"},
                    {"field": "year", "type": "quantitative", "title": "Year"},
                    {"field": "life_expectancy", "type": "quantitative", "format": ".1f", "title": "Life Expectancy (years)"},
                    {"field": "life_expectancy_increased", "type": "quantitative", "format": ".1f", "title": "Increased (years)"}
                ],
                "opacity": {"value": 1}
            }
        }
    ]
}